<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Sets up the ActionBar -->
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <!-- Removes the drop shadow underneath all ActionBar(s) -->
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:spinnerItemStyle">@style/GraySpinnerItem</item>
        <item name="undoBarStyle">@style/SimpleUndoBar</item>
    </style>

    <!-- Action bar style -->
    <style name="ActionBarStyle" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/actionbar</item>
        <item name="android:height">56dp</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <!-- Action bar text style -->
    <style name="ActionBarTitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GraySpinnerItem">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SimpleUndoBar" parent="UndoBarMaterialStyle">
        <item name="messageStyle">@style/SimpleUndoBarMessageStyle</item>
        <item name="buttonStyle">@style/SimpleUndoBarButton</item>
    </style>

    <style name="SimpleUndoBarMessageStyle" parent="UndoBarMessageMaterial">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SimpleUndoBarButton" parent="UndoBarButtonMaterial">
        <item name="android:textColor">@color/orange</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

</resources>
